#!/bin/sh
# Apollo Team - Patched sdl-config for export correct SDL_LIBS and SDL_CFLAGS to configure

prefix=/usr/local
exec_prefix=${prefix}
exec_prefix_set=no

usage="\
Usage: sdl-config [--prefix[=DIR]] [--exec-prefix[=DIR]] [--version] [--libs] [--cflags]"

if test $# -eq 0; then
      echo "${usage}" 1>&2
      exit 1
fi

while test $# -gt 0; do
  case "$1" in
  -*=*) optarg=`echo "$1" | sed 's/[-_a-zA-Z0-9]*=//'` ;;
  *) optarg= ;;
  esac

  case $1 in
    --prefix=*)
      prefix=$optarg
      if test $exec_prefix_set = no ; then
        exec_prefix=$optarg
      fi
      ;;
    --prefix)
      echo $prefix
      ;;
    --exec-prefix=*)
      exec_prefix=$optarg
      exec_prefix_set=yes
      ;;
    --exec-prefix)
      echo $exec_prefix
      ;;
    --version)
      echo 1.2.3
      ;;
    --cflags)
      if test ${prefix}/include != /usr/include ; then
        includes=-I${prefix}/include
      fi
      echo -I/home/willem/Downloads/ApolloCrossDev/Compilers/GCC-6.50/ApolloCrossDev/m68k-amigaos/include -I/home/willem/Downloads/ApolloCrossDev/Compilers/GCC-6.50/ApolloCrossDev/m68k-amigaos/include/SDL -I/home/willem/Downloads/ApolloCrossDev/Compilers/GCC-6.50/ApolloCrossDev/m68k-amigaos/ndk-include
      ;;
    --libs)
      libdirs="-L${exec_prefix}/lib "
      echo -L$HOME/Downloads/ApolloCrossDev/Compilers/GCC-6.50/ApolloCrossDev/m68k-amigaos/lib -L$HOME/Downloads/ApolloCrossDev/Compilers/GCC-6.50/ApolloCrossDev/lib/gcc/m68k-amigaos/6.5.0b -lSDL -lSDL_mixer -lSDL_net -lsocket -lfreetype -lmad -lpng16 -ljpeg -lm -lgl_dummy -ldebug -lamiga -lpthread -lintl -liconv -lstdc++ -lz
#-L/cygdrive/e/usr/local/amiga/m68k-amigaos/lib -lSDL_Mixer5 -lvorbisfile -lvorbis -logg -lsdl_image -ljpeg -lpng16 -lz -lm -lSDL.ix -lgl_dummy -ldebug -lamiga -lpthread -lintl -liconv -lstdc++
      ;;
    --static-libs)
      libdirs="-L${exec_prefix}/lib "
      echo $libdirs
      ;;
    *)
      echo "${usage}" 1>&2
      exit 1
      ;;
  esac
  shift
done
